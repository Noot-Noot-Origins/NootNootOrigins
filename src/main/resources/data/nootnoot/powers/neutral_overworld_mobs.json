{
	"type": "origins:multiple",
	"callback": {
		"type": "origins:action_on_callback",
		"entity_action_added": {
			"type": "origins:execute_command",
			"command": "team add bloomfolk"
		},
		"entity_action_removed": {
			"type": "origins:execute_command",
			"command": "team leave @s"
		}
	},
	"team": {
		"type": "origins:action_over_time",
		"entity_action": {
			"type": "origins:and",
			"actions": [{
				"type": "origins:execute_command",
				"command": "team join bloomfolk @s"
			}, {
				"type": "origins:execute_command",
				"command": "execute at @s as @e[distance=..64,type=#morgan:overworld_mobs,tag=!aggressed,team=!ghost] run team join bloomfolk @s"
			}]
		},
		"interval": 20
	},
	"aggress": {
		"type": "origins:target_action_on_hit",
		"entity_action": {
			"type": "origins:and",
			"actions": [{
				"type": "origins:execute_command",
				"command": "tag @s add aggressed"
			}, {
				"type": "origins:execute_command",
				"command": "team leave @s"
			}]
		},
		"target_condition": {
"type": "origins:in_tag",
    "tag": "morgan:overworld_mobs"
		},
		"cooldown": 0,
		"hud_render": {
			"should_render": false
		}
	},
	"hidden": true
}